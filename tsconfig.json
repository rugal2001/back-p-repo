{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }