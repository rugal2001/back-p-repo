{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "paths": {
      "@/*": ["./src/*"]
       },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }